<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="CloudSyncGUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CloudSyncGUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!--StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button x:Name="myButton" Click="myButton_Click">Click Me</Button>
    </StackPanel-->

    <StackPanel  BorderThickness="1" BorderBrush="Red" CornerRadius="4" Padding="3">
        <TextBox x:Name="tokenTbx" PlaceholderText="TOKEN"></TextBox>
        <TextBox x:Name="zoneHostTbx" PlaceholderText="Onezone hostname"></TextBox>
        <TextBox x:Name="rootPathTbx" PlaceholderText="root folder path"></TextBox>
        <Button x:Name="connectBtn" Click="ConnectButton_Click" Background="DarkBlue">Connect</Button>
        <TextBlock x:Name="statusTbl" Text="Not Connected"></TextBlock>

        <!-- Note: Syntax highlighting updates on 'Load'. -->
    </StackPanel>
</Window>
